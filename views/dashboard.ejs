<!DOCTYPE html>
<html lang="en">
  <%- include('includes/head') %>
  <body>
    <%- include('includes/header') %>

    <main>
      <% if(posts.length === 0) { %>
      <h4>Hello <%= user.username %>, you do not have any posts yet.</h4>

      <% } else { %>
      <h4>Hello <%= user.username %>, here are your posts.</h4>

      <% } %>
      <ul>
        <% posts.forEach(post => { %>
        <li>
          <a href="/post/<%= post.id%>"><%= post.title %></a> on <%=
          post.createdDate %>
        </li>
        <% }); %>
      </ul>
    </main>

    <%- include('includes/footer') %>
  </body>
</html>
